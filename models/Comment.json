{
  "name": "Comment",
  "properties": {
    "id": {
      "type": "ID",
      "required": true
    },
    "content": {
      "type": "String",
      "required": true
    },
    "postId": {
      "type": "ID",
      "required": true
    },
    "userId": {
      "type": "ID",
      "required": true,
      "isOwner": true
    },
    "createdAt": {
      "type": "AWSDateTime",
      "required": false
    },
    "updatedAt": {
      "type": "AWSDateTime",
      "required": false
    }
  },
  "relationships": {
    "post": {
      "type": "belongsTo",
      "target": "Post",
      "foreignKey": "postId"
    },
    "user": {
      "type": "belongsTo",
      "target": "User",
      "foreignKey": "userId"
    }
  },
  "dataSource": {
    "type": "database",
    "engine": "nosql"
  },
  "accessControl": {
    "default": "deny",
    "rules": [
      {
        "allow": "create",
        "groups": ["users"]
      },
      {
        "allow": "read",
        "groups": ["users", "admins"]
      },
      {
        "allow": "update",
        "owner": true
      },
      {
        "allow": "delete",
        "owner": true
      },
      {
        "allow": "delete",
        "groups": ["admins"]
      }
    ]
  },
  "enableSubscriptions": true
}
